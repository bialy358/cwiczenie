<%= form_for [:control_panel, @board, @story] do |f| %>
    <%if @story.errors.any?%>
        <ul>
          <% @story.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <br>
    <%= f.label :estimate %>
    <%= f.select :estimate, Story::ESTIMATES, include_blank: false %>
    <br>
    <%= f.submit %>
<% end %>