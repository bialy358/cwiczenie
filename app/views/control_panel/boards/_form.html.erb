<%= form_for [:control_panel, @board] do |f|%>
    <%if @board.errors.any?%>
        <ul>
          <% @board.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.submit %>
<% end %>