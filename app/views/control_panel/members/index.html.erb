<%= link_to 'Add member', new_control_panel_board_member_path, class: 'btn btn-primary' %>

<% @members.each do |member| %>
    <br>
    <%= member.show_email %>
    <%= link_to control_panel_board_member_path(@board, member), method: :delete, class: 'btn btn-danger' do %>
        Delete
        <span class="glyphicon glyphicon-remove"></span>
    <% end %>
<% end %>